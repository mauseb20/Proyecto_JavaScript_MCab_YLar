<div class="col-md-12">
    <div class="row">
        <h2>Agregar Profesor</h2>
    </div>
    <br>
    <div class="row">
        <form class="form-horizontal" action="/Profesor/crearProfesor" method="POST">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Nombres</label>
                <div class="col-sm-10">
                    <input type="text" name="nombreProf" class="form-control" placeholder="Nombres">
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Apellidos</label>
                <div class="col-sm-10">
                    <input type="text" name="apellidoProf" class="form-control" placeholder="Apellidos">
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">E-mail</label>
                <div class="col-sm-10">
                    <input type="email" name="correoProf" class="form-control" placeholder="Correo Institucional">
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-4">
                    <div class="btn-group btn-group-justified" role="group" aria-label="...">
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                        <div class="btn-group" role="group">
                            <a href="/profesores"><button type="button" class="btn btn-default">Cancelar</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>