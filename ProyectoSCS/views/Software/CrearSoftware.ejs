<div class="col-md-12">
    <div class="row">
        <h2>Agregar Software</h2>
    </div>
    <br>
    <div class="row">
        <form class="form-horizontal" action="/Programa/crearPrograma" method="POST">
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Nombre</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="nombrePrograma" placeholder="Nombre del aplicativo">
                </div>
            </div>
            <div class="form-group form-inline">
                <label for="inputPassword3" class="col-sm-2 control-label">Servicio</label>
                <div class="col-sm-4">
                    <select class="form-control" name="servicio">
                        <option value="Ofimatica">Ofimatica</option>
                        <option value="IDE">IDE</option>
                        <option value="BDD">BDD</option>
                        <option value="Case">Case</option>
                        <option value="Otro" selected>Otro</option>
                    </select>
                </div>
                <label for="inputPassword3" class="col-sm-2 control-label">Categoría</label>
                <div class="col-sm-3">
                    <select class="form-control" name="categoria">
                        <option value="Pago">Pago</option>
                        <option value="Libre">Libre</option>
                    </select>
                </div>
            </div>
            <div class="form-group form-inline">
                <label for="inputPassword3" class="col-sm-2 control-label">Versión</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="versionProg" placeholder="Versión del aplicativo">
                </div>
                <label for="inputPassword3" class="col-sm-2 control-label">Año</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="anioProg" placeholder="Año de la versión">
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-4">
                    <div class="btn-group btn-group-justified" role="group" aria-label="...">
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                        <div class="btn-group" role="group">
                            <a href="/software"><button type="button" class="btn btn-default">Cancelar</button></a>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>