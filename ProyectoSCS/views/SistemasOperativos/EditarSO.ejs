<div class="col-md-12">
  <div class="row">
    <h2>Editar Sistema Operativo</h2>
  </div>
  <br>
  <div class="row">
    <form class="form-horizontal" action="/Programa/editarPrograma" method="POST">
      <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Nombre</label>
        <div class="col-sm-10">
          <input type="hidden" name="idPrograma" value="<%= software.idPrograma%>">
          <input type="text" class="form-control" name="nombrePrograma" placeholder="Nombre del sistema operativo" value="<%= software.nombrePrograma%>">
        </div>
      </div>
      <div class="form-group form-inline">
        <label for="inputPassword3" class="col-sm-2 control-label">Categoría</label>
        <div class="col-sm-3">
          <select class="form-control" name="categoria">
            <option value="Pago" <%(software.categoria == "Pago") ? 'selected' :''%>>Pago</option>
            <option value="Libre" <%(software.categoria == "Libre") ? 'selected' :''%>>Libre</option>
          </select>
        </div>
        <label for="inputPassword3" class="col-sm-2 control-label">Año</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" name="anioProg" placeholder="Año de lanzamiento" value="<%= software.anioProg%>">
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Versión</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="versionProg" placeholder="Versión del sistema operativo" value="<%= software.versionProg%>">
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="col-md-offset-4 col-md-4">
          <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <div class="btn-group" role="group">
              <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
            <div class="btn-group" role="group">
              <a href="/sistemasO"><button type="button" class="btn btn-default">Cancelar</button></a>
            </div>

          </div>
        </div>
      </div>
    </form>
  </div>
</div>
