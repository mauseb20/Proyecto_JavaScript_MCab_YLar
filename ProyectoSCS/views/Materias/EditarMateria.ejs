<div class="col-md-12">
    <div class="row">
        <h2>Editar Materia</h2>
    </div>
    <br>
    <div class="row">
        <form class="form-horizontal" action="/Materia/editarMateria" method="POST">
            <div class="form-group">
                <input type="text" style="display:none" value="<%= materia.idMateria%>" name="idMateria">
                <input type="text" style="display:none" value="<%= grupo.grupoMateria%>" name="grupoMateriaModificar">
                <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="nombreMateria" value="<%= materia.nombreMateria%>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">CÃ³digo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="codigoMateria" value="<%= materia.codigoMateria%>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Grupo</label>
                <div class="col-sm-10">
                    <select class="form-control" name="grupoMateria">
                        <option value="Sin Grupo" <%= (grupo.grupoMateria == 'Sin Grupo') ? 'selected' :''%>>Sin Grupo</option>
                        <option value="GR1" <%= (grupo.grupoMateria == 'GR1') ? 'selected' :''%>>GR1</option>
                        <option value="GR2" <%= (grupo.grupoMateria == 'GR2') ? 'selected' :''%>>GR2</option>
                        <option value="GR3" <%= (grupo.grupoMateria == 'GR3') ? 'selected' :''%>>GR3</option>
                        <option value="GR4" <%= (grupo.grupoMateria == 'GR4') ? 'selected' :''%>>GR4</option>
                    </select>
                </div>
            </div>
            <br>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-4">
                    <div class="btn-group btn-group-justified" role="group" aria-label="...">
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                        <div class="btn-group" role="group">
                            <a href="/materias"><button type="button" class="btn btn-default">Cancelar</button></a>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>